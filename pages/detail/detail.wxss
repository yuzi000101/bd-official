/* pages/detail/detail.wxss */
.detailContainer {
  display: flex;
  flex-direction: column;
}

.headImg {
  width: 100%;
  height: 400rpx;
}

.avatar_data {
  padding: 10rpx;
}

.avatar_data image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.avatar_data text {
  font-size: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 10rpx;
}

.collection_share_container {
  position: relative;
}

.collection_share {
  float: right;
  margin-right: 50rpx;
}

.collection_share image {
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}

.line {
  width: 90%;
  height: 1rpx;
  background-color: #eee;
  position: absolute;
  left: 5%;
  top: 45rpx;
  z-index: -1;
}

button {
  width: 220rpx;
  height: 80rpx;
}

.content {
  font-size: 32rpx;
  text-indent: 64rpx;
}

.music{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 170rpx;
  left: 50%;
  margin-left: -30rpx;
}