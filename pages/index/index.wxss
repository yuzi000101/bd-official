/* pages/index/index.wxss */
page{
  height: 100%;
  background-color: #ffffff;
}

.indexContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar{
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx 0;
  border-radius: 100rpx;
}

.userName{
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

.goStudy{
  font-size: 32rpx;
  color: #333;
  width: 300rpx;
  height: 70rpx;
  border: 1rpx solid #333;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
}